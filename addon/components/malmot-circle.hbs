{{#if @animatePositionChange}}
  {{#animated-value
    this.bubble
    key="id"
    watch="myX,myY"
    use=this.moveThem
    duration=1000 as |v|
  }}
    <circle
      cx={{v.myX}}
      cy={{v.myY}}
      r={{@r}}
      fill="blue"
      fill-opacity="0.5"
    ></circle>
  {{/animated-value}}
{{else}}
  Not animated
  <circle
    cx={{this.bubble.myX}}
    cy={{this.bubble.myY}}
    r={{@r}}
    fill="red"
    fill-opacity="0.5"
    {{did-insert this.registerMouseDownListener}}
    {{did-insert this.registerMouseUpListener}}
    {{did-insert this.registerMouseMoveListener}}
    {{did-insert this.registerMouseClickListener}}
  ></circle>
{{/if}}